<Window x:Class="Space_intruders.NicknameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_intruders"
        mc:Ignorable="d"
        Title="Game Over - Enter Nickname" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Margin="15">
        <Label Content="Enter your nickname (max 15 chars):" FontWeight="Bold"/>
        <TextBox x:Name="NicknameTextBox" Margin="0,5,0,10" MaxLength="15"/>
        <Button x:Name="OkButton" Content="OK" IsDefault="True" Click="OkButton_Click" Padding="10,5"/>
    </StackPanel>
</Window>