<Window x:Class="Space_intruders.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_intruders"
        mc:Ignorable="d"
        Title="Space Intruders: Medieval Edition - Game" Height="600" Width="800"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Resources/game-background.jpg" Stretch="UniformToFill" Opacity="0.5"/>
    </Window.Background>

    <Viewbox Stretch="Uniform">
        <Canvas x:Name="gameCanvas"
                Width="800" Height="580">

            <StackPanel x:Name="heartsPanel"
                    Orientation="Horizontal"
                    Canvas.Left="15"
                    Canvas.Top="10"/>

            <Label  x:Name="ScoreLabel" />

            <Image  x:Name="playerImage"
                    Width="30"
                    Height="30"
                    Canvas.Left="370"
                    Canvas.Top="530"
                    Source="/Resources/archer-player.png"/>

        </Canvas>
    </Viewbox>
</Window>